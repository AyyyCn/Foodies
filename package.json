{
    "name": "polls",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "workspaces": [
        "client",
        "server",
        "shared"
    ],
    "scripts": {
        "redis:container":"docker run --name my-redis -p 6379:6379 -d redislabs/rejson:2.0.0",
        "docker:compose": "docker-compose up -d",
        "client:dev": "npm run dev --workspace=client",
        "server:dev": "wait-on tcp:6379 && npm run start:dev --workspace=server",
        "start": "concurrently 'npm:redis:container' 'npm:server:dev' 'npm:client:dev'",
        "storybook": "npm run storybook --workspace=client",
        "stop": "docker-compose down",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AyyyCn/Chat.git"
    },
    "keywords": [
        "ts",
        "react",
        "nestjs",
        "socketjs"
    ],
    "devDependencies": {
        "@types/webpack": "^5.28.0",
        "concurrently": "^7.0.0",
        "prettier": "^2.5.1",
        "wait-on": "^7.2.0"
    },
    "dependencies": {
        "@nestjs/config": "^3.2.2",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/platform-express": "^7.5.5",
        "@nestjs/platform-socket.io": "^10.0.0",
        "@nestjs/websockets": "^10.0.0",
        "express": "^4.19.2",
        "ioredis": "^4.28.5",
        "jsonwebtoken": "^9.0.2",
        "nanoid": "^5.0.7",
        "nestjs-redis": "1.2.6"
    }
}
